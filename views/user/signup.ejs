        <div>
          <label>Password</label>
          <input type="password" placeholder="password" id="password-input">
        </div>
        <div class="push right">
          <button type="button" class="button" id="submit-button">Signup</button>
          <span class="tabbed-left">or <a href="/login">Login</a></span>
        </div>
      </fieldset>
    </form>

