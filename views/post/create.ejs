    <div class="field">
      <div class="ui left labeled icon input">
        <input name="query" type="text" placeholder="Search Query" id="search-box">
        <i class="search icon"></i>
      </div>
    </div>
  </div>

  <div id="list_results"></div>

</div>

<%- partial('../site/partials/page_close') %>

